            <Label></Label>
            <Label Text="Message Push" HorizontalOptions="Center" />
            <Switch  HorizontalOptions="Center" IsToggled="{Binding UsedPush, Mode=TwoWay}"></Switch>
            <Label></Label>
            <Label Text="Vereine"></Label>
